{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "KaLang",
    "patterns": [
        {
            "include": "#comment-single"
        },
        {
            "include": "#statement"
        }
    ],
    "repository": {
        "statement": {
            "patterns": [
                {
                    "include": "#comment-single"
                },
                {
                    "include": "#class-declaration"
                },
                {
                    "include": "#function-declaration"
                },
                {
                    "include": "#for-loop"
                },
                {
                    "include": "#expression"
                }
            ]
        },
        "expression": {
            "patterns": [
                {
                    "include": "#comment-single"
                },
                {
                    "include": "#strings-double"
                },
                {
                    "include": "#strings-single"
                },
                {
                    "include": "#builtins"
                },
                {
                    "include": "#new-expression"
                },
                {
                    "include": "#keyword"
                },
                {
                    "include": "#method-call"
                },
                {
                    "include": "#function-call"
                },
                {
                    "include": "#constant"
                },
                {
                    "include": "#property"
                },
                {
                    "include": "#identifier"
                },
                {
                    "include": "#array"
                },
                {
                    "include": "#number"
                },
                {
                    "include": "#assignment"
                },
                {
                    "include": "#operator"
                },
                {
                    "include": "#punctuation"
                }
            ]
        },
        "class-declaration": {
            "begin": "(class)\\s+([[:alpha:]_]\\w*)\\s+(do)",
            "end": "(end)",
            "beginCaptures": {
                "1": {
                    "name": "keyword.control"
                },
                "2": {
                    "name": "entity.name.class"
                },
                "3": {
                    "name": "keyword.control"
                }
            },
            "endCaptures": {
                "1": {
                    "name": "keyword.control"
                }
            },
            "patterns": [
                {
                    "include": "#class-property-declaration"
                },
                {
                    "include": "#method-declaration"
                }
            ]
        },
        "method-declaration": {
            "begin": "([[:alpha:]_]\\w*|(?:==|!=|<=|>=|<|>|\\+|-|\\*|/|%))\\s*(?:\\([^\\)]*?\\))?\\s+(do)",
            "end": "(end)",
            "beginCaptures": {
                "1": {
                    "name": "entity.name.function"
                },
                "2": {
                    "name": "keyword.control"
                }
            },
            "endCaptures": {
                "1": {
                    "name": "keyword.control"
                }
            },
            "patterns": [
                {
                    "include": "#statement"
                }
            ]
        },
        "class-property-declaration": {
            "begin": "([[:alpha:]_]\\w*)\\s*(=)\\s*",
            "beginCaptures": {
                "1": {
                    "name": "variable.other.property"
                },
                "2": {
                    "name": "keyword.operator"
                }
            },
            "end": "\\s*(\n|end)",
            "patterns": [
                {
                    "include": "#expression"
                }
            ]
        },
        "function-declaration": {
            "begin": "(function)\\s+([[:alpha:]_]\\w*)\\s+(do)",
            "end": "(end)",
            "beginCaptures": {
                "1": {
                    "name": "keyword.control"
                },
                "2": {
                    "name": "entity.name.function"
                },
                "3": {
                    "name": "keyword.control"
                }
            },
            "endCaptures": {
                "1": {
                    "name": "keyword.control"
                }
            },
            "patterns": [
                {
                    "include": "#statement"
                }
            ]
        },
        "for-loop": {
            "begin": "for(?=.+ in ?.*)",
            "end": "(end)",
            "beginCaptures": {
                "0": {
                    "name": "keyword.control"
                }
            },
            "endCaptures": {
                "1": {
                    "name": "keyword.control"
                }
            },
            "patterns": [
                {
                    "include": "#expression"
                }
            ]
        },
        "method-call": {
            "begin": "\\s*(\\.)\\s*([[:alpha:]_]\\w*)\\s*(?=\\()",
            "end": "(?=\\))",
            "beginCaptures": {
                "1": {
                    "name": "punctuation.accessor"
                },
                "2": {
                    "name": "entity.name.function.member"
                }
            },
            "patterns": [
                {
                    "include": "#arguments"
                }
            ]
        },
        "function-call": {
            "begin": "\\s*([[:alpha:]_]\\w*)\\s*(?=\\()",
            "end": "(?=\\))",
            "beginCaptures": {
                "1": {
                    "name": "entity.name.function"
                }
            },
            "patterns": [
                {
                    "include": "#arguments"
                }
            ]
        },
        "arguments": {
            "patterns": [
                {
                    "include": "#expression"
                },
                {
                    "match": ",",
                    "name": "punctuation.separator.comma"
                }
            ]
        },
        "property": {
            "match": "(\\.)([[:alpha:]_]\\w*)",
            "captures": {
                "1": {
                    "name": "punctuation.accessor"
                },
                "2": {
                    "name": "variable.other.property"
                }
            }
        },
        "identifier": {
            "name": "variable.name",
            "match": "[[:alpha:]_]\\w*"
        },
        "constant": {
            "name": "variable.other.constant",
            "match": "[A-Z_][A-Z_0-9]*"
        },
        "keyword": {
            "name": "keyword.control",
            "match": "\\b(with|do|end|if|else|then|for|in|function|while|and|or|return|extern|class|local|new|break|continue|import|export|from|default)\\b"
        },
        "builtins": {
            "patterns": [
                {
                    "name": "variable.language.this",
                    "match": "\\bthis\\b"
                },
                {
                    "name": "support.variable",
                    "match": "\\b(console|window)\\b"
                }
            ]
        },
        "new-expression": {
            "match": "(new)\\s+([[:alpha:]_]\\w*)",
            "captures": {
                "1": {
                    "name": "keyword.operator.new"
                },
                "2": {
                    "name": "entity.name.class"
                }
            }
        },
        "strings-double": {
            "name": "string.quoted.double",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\\\."
                }
            ]
        },
        "strings-single": {
            "name": "string.quoted.single",
            "begin": "'",
            "end": "'",
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\\\."
                }
            ]
        },
        "array": {
            "begin": "\\[",
            "end": "\\]",
            "patterns": [
                {
                    "include": "#expression"
                },
                {
                    "name": "punctuation.separator.comma",
                    "match": ","
                }
            ]
        },
        "number": {
            "name": "constant.numeric",
            "match": "\\d+(\\.\\d+)?"
        },
        "operator": {
            "name": "keyword.operator",
            "match": "==|!=|<=|>=|<|>|\\+|-|\\*|/|%|\\.\\."
        },
        "punctuation": {
            "name": "punctuation",
            "match": ":|\\{|\\}"
        },
        "assignment": {
            "name": "keyword.operator.assignment",
            "match": "=|\\+=|-=|\\*=|/=|%=|&&=|\\|\\|="
        },
        "comment-single": {
            "match": "#[^\\n]*",
            "name": "comment.line"
        }
    },
    "scopeName": "source.ka"
}
